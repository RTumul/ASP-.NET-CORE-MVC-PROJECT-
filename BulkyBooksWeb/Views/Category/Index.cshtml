@model IEnumerable<Category> 
@{
    ViewData["Title"] = "Product List";
}

<partial name= "_Notification" />

<div class="container p-3">
    <div class="row pt-3">
        <div class="col-6">
            <h2 class="text-secondary">Product Lists</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
               <b>Upload New Product</b>
            </a>
        </div>
    </div>
</div>

<table class="table table-stripped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Product Price
            </th>
            <th colspan=2>
                Actions
            </th>
           
        </tr>
    </thead>
    @foreach (var obj in Model)
    {
        <tr>
            <td width="50%">
                @obj.ProductName
            </td>
            <td width="30%">
                @obj.ProductPrice
            </td>
            
            <td>
                <div class="w-75 btn-group" role="group">
                    <a asp-action="Edit" asp-controller="Category" asp-route-id="@obj.Id" class="btn btn-primary mx-2"> Edit</a> 
                </div>
            </td>
            <td>
                <div class="w-75 btn-group" role="group">
                    <a asp-action="Delete" asp-controller="Category" asp-route-id="@obj.Id" class="btn btn-danger mx-2">Delete</a> 
                </div>
            </td>
            
        </tr>
    }
    <tbody>

    </tbody>
</table>