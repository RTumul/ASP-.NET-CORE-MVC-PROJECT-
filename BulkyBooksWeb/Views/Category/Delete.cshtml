

@model Category
@{
    ViewData["Title"] = "Delete Product";
}

 <partial name=_Notification />

 <input asp-for="Id" hidden />

<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-secondary">Delete User</h2>
            <hr />
        </div>
        
       
        <div class="mb-3">
            <label asp-for="ProductName"></label>
            <input asp-for="ProductName" disabled class="form-control" />
            
        </div>
        <div class="mb-3">
            <label asp-for="ProductPrice"></label>
            <input asp-for="ProductPrice" disabled class="form-control" />
            
        </div>
    </div>
    <button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
    <a class="btn btn-danger" asp-action="Index" asp-controller="Category">Back</a>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
       
    }
}
